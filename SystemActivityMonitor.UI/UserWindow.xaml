<Window x:Class="SystemActivityMonitor.UI.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кабінет користувача (Read Only)" Height="450" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="txtUserWelcome" Text="Вітаємо!" FontSize="18" FontWeight="Bold"/>
            <TextBlock Text="Ви маєте доступ лише для перегляду статистики." Foreground="Gray" FontSize="12"/>
        </StackPanel>

        <ListBox x:Name="lstUserLogs" Grid.Row="1" BorderBrush="LightGray" BorderThickness="1"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Оновити дані" Width="120" Height="30" Margin="0,0,10,0" Click="BtnRefresh_Click"/>
            <Button Content="Вийти" Width="100" Height="30" Click="BtnLogout_Click" Background="#DDDDDD"/>
        </StackPanel>
    </Grid>
</Window>