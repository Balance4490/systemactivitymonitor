<Window x:Class="SystemActivityMonitor.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Activity Monitor - Головна"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock x:Name="txtWelcome" Text="Вітаємо!" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="txtRole" Text="Роль: ..." FontSize="14" Foreground="Gray" Margin="0,0,0,10"/>
        </StackPanel>

        <ListBox x:Name="lstLogs" Grid.Row="1" BorderBrush="Gray" BorderThickness="1"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <StackPanel VerticalAlignment="Center" Margin="0,0,20,0">
                <TextBlock Text="Режим генерації:" FontSize="10" Foreground="Gray"/>
                <ComboBox x:Name="cmbFactoryMode" Width="120" SelectedIndex="0">
                    <ComboBoxItem Content="Standard Mode"/>
                    <ComboBoxItem Content="Critical Mode"/>
                </ComboBox>
            </StackPanel>

            <Separator Margin="0,10" Width="120"/>

            <StackPanel VerticalAlignment="Center" Margin="0,0,20,0">
                <TextBlock Text="Формат звіту (Bridge):" FontSize="10" Foreground="Gray"/>
                <ComboBox x:Name="cmbReportFormat" Width="120" SelectedIndex="0">
                    <ComboBoxItem Content="Plain Text"/>
                    <ComboBoxItem Content="HTML"/>
                </ComboBox>
            </StackPanel>

            <Button Content="Очистити базу" Width="120" Height="30" Margin="0,0,10,0"
                    Click="BtnClear_Click" Background="#D8000C" Foreground="White" FontWeight="Bold"/>

            <Button Content="Згенерувати" Width="120" Height="30" Margin="0,0,10,0"
                    Click="BtnGenerate_Click"/>

            <Button Content="Оновити список" Width="120" Height="30"
                    Click="BtnLoadIterator_Click" Background="#007ACC" Foreground="White"/>

            <Button Content="Експорт звіту" Width="120" Height="30" Margin="0,0,10,0"
                    Click="BtnBridgeReport_Click" Background="#28a745" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>